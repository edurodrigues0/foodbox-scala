{
  "compilerOptions": {
    "target": "es2020",                              
    "module": "commonjs",                             
    "outDir": "./build",                             
    "rootDir": "./src",                             
    "declaration": true,                             
    "declarationMap": true,                          
    "sourceMap": true,                               
    "removeComments": true,                          
    "strict": true,                                  
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "skipLibCheck": true                             
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
